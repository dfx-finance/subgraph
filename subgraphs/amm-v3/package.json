  "author": "DFX",
  "scripts": {
    "test": "yarn test",
    "codegen": "yarn graph codegen",
    "build": "yarn graph build",
    "lint": "yarn run eslint './src/**/*.{ts,tsx}' --fix",
    "prepare:mainnet": "mustache config/mainnet.json subgraph.template.yaml > subgraph.yaml",
    "prepare:polygon": "mustache config/polygon.json subgraph.template.yaml > subgraph.yaml",
    "prepare:arbi": "mustache config/arbitrum.json subgraph.template.yaml > subgraph.yaml",
    "deploy:mainnet": "yarn graph deploy tommy4241/graph-name --debug --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/ --access-token xxx",
    "deploy:polygon": "yarn graph deploy --studio dfx_v3_matic  --deploy-key 22f1189635200beed67c2c69c36541be",
    "deploy:arbi": "yarn graph deploy --studio dfx_v25_arbi  --deploy-key xxx"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.58.0",
    "@graphprotocol/graph-ts": "^0.31.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "chalk": "^5.3.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "mustache": "^4.2.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "yargs": "^17.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,graphql}": [
      "yarn run lint",
      "git add"
    ]
  },
  "dependencies": {
    "yarn": "^1.22.19"
  }
}
